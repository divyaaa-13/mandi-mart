<div class="main-div">
    <div class="text-content">
        <div class="ratings">
            <img src="{{ 'hero-ratings.png' | asset_url }}" alt="ratings" />
        </div>
        {% if block.settings.heading != blank %}
        <h3>{{ block.settings.heading }}</h3>
        {% endif %}
        
        {% if block.settings.paragraph != blank %}
        <p>{{ block.settings.paragraph }}</p>
        {% endif %}
    </div>
    
    <div class="img-div">
        {% if block.settings.image != blank %}
        <img src="{{ block.settings.image | file_url }}" alt="block image" />
        {% endif %}
    </div>
</div>

<style>
    .main-div{
        margin: auto;
        padding: 0;
        height: 173px;
        width: 1155.02px;
        display: flex;
        background-color: aqua;
    }
    .text-content{
        margin: 0;
        padding: 0;
        width: 761.99px;
        height: 173px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 7px;
    }
    .text-content .ratings{
        margin: 0;
        padding: 0;
        width: fit-content;
        height: 32px;
        object-fit: cover;
    }
    .ratings img{
        margin: 0;
        padding: 0;
        width: 430.6px;
        height: 32px;
    }
    .text-content h3{
        margin: 0;
        padding: 0;
        font-size: 40px;
        font-weight: 600;
        line-height: 54px;
        color: #074542;
    }
    .text-content p{
        margin: 0;
        padding: 0;
        font-size: 20px;
        font-weight: 400;
        line-height: 31.1px;
    }

    .img-div{
        margin: 0;
        padding: 0;
        width: 393.03px;
        height: 173px;
        object-fit: cover;
    }
    .img-div img{
        margin: 0;
        padding: 0;
        width: 393.03px;
        height: 173px;
        background-size: cover;
        background-position: center;
        background-color: blueviolet;
    }

    @media(min-width: 319px) and (max-width: 700px) {
        .main-div {
            width: 100vw;
            margin: 0;
            height: 107px;
        }
        .img-div {
            display: none;
        }
        .text-content {
            justify-content: flex-start;
            align-items: center;
            gap: 3px;
        }
        .text-content .ratings {
            height: 24px;
            width: fit-content;
        }
        .ratings img {
            width: fit-content;
            height: 24px;
        }
        .text-content h3 {
            font-size: 20px;
            line-height: 27px;
            text-align: center;
        }
        .text-content p {
            font-size: 16px;
            line-height: 24.88px;
            text-align: center;
        }
    }
</style>

{% schema %}
{
    "name": "Main Div Block",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Lorem ipsum dolor sit"
        },
        {
            "type": "textarea",
            "id": "paragraph",
            "label": "Paragraph",
            "default": "Lorem ipsum dolor sit amet consectet"
        },
        {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
        }
    ],
    "presets": [
        {
            "name": "Main Div Block"
        }
    ]
}
{% endschema %}
