<div class="main-div" style="background-color: {{ settings.background_color }};">
  <div class="text-content">
    <div class="ratings">
      {% if settings.ratings_image %}
        <img src="{{ settings.ratings_image | asset_url }}" alt="ratings" />
      {% else %}
        <p>No ratings image uploaded.</p>
      {% endif %}
    </div>
    <h3 style="color: {{ settings.heading_color }};">
      {{ settings.heading_text | default: 'Default Heading' }}
    </h3>
    <p style="color: {{ settings.paragraph_color }};">
      {{ settings.paragraph_text | default: 'Default paragraph text' }}
    </p>
  </div>
  <div class="img-div">
    {% if settings.image %}
      <img src="{{ settings.image | asset_url }}" alt="Uploaded image" />
    {% else %}
      <p>No image uploaded.</p>
    {% endif %}
  </div>
</div>


