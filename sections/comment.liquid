{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="main-section section-{{ section.id }}-padding gradient color-{{ section.settings.section_color_scheme }} custom-section">
<div class="main-div iwt__wrapper color-{{ section.settings.color_scheme }}" >

    <div class="text-content">
        <div class="ratings">
            <img src="{{ 'hero-ratings.png' | asset_url }}" alt="ratings" />
        </div>
        <h3 style="color: {{ settings.h3_text_color | default: '#074542' }}">{{ settings.h3_text | default: 'Lorem ipsum dolor sit' }}</h3>
        <p style="color: {{ settings.p_text_color | default: '#000000' }}">{{ settings.p_text | default: 'Lorem ipsum dolor sit amet consectet' }}</p>
    </div>
    <div class="img-div">
        <img  src="{{section.settings.img_upload |  img_url: 'original'}}" alt="section image">
    </div>
</div>
</div>


<style>
    .main-div{
        margin: auto;
        padding: 0;
        height: 173px;
        width: 1155.02px;
        display: flex;
    }
    .text-content{
        margin: 0;
        padding: 0;
        width: 761.99px;
        height: 173px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 7px;
    }
    .text-content .ratings{
        margin: 0;
        padding: 0;
        width: fit-content;
        height: 32px;
        object-fit: cover;
    }
    .ratings img{
        margin: 0;
        padding: 0;
        width: 430.6px;
        height: 32px;
    }
    .text-content h3{
        margin: 0;
        padding: 0;
        font-size: 40px;
        font-weight: 600;
        line-height: 54px;
        color: #074542;
        font-family: "Poppins", sans-serif;
    
    }
    .text-content p{
        margin: 0;
        padding: 0;
        font-size: 20px;
        font-weight: 400;
        line-height: 31.1px;
        font-family: "Poppins", sans-serif;
    }

    .img-div{
        margin: 0;
        padding: 0;
        width: 393.03px;
        height: 173px;
        object-fit: cover;
        border-radius: 14.89px;
    }
    .img-div img{
        margin: 0;
        padding: 0;
        width: 393.03px;
        height: 173px;
        background-size: cover;
        background-position: center;
        border-radius: 14.89px;
    }


    /* MEDIA QUERRIES... */

    @media(min-width : 319px) and (max-width : 700px){
        .main-div{
            width: 100vw;
            margin: 0;
            height: 107px;
        }
        .img-div{
            display: none;
        }
        .text-content{
            justify-content: flex-start;
            align-items: center;
            gap: 3px;
        }

        .text-content .ratings{
        height: 24px;
        width: fit-content;
    }
    .ratings img{
        width:fit-content;
        height: 24px;
    }
        .text-content h3{
            font-size: 20px;
            line-height: 27px;
            text-align: center;
            font-family: 'Poppins';
        }
        .text-content p{
            font-size: 16px;
            line-height: 24.88px;
            text-align: center;
            font-family: 'Poppins';
        }

    }

</style>

{% schema %}
    {
      "name": "Text and Image Block",
      "settings": [
        {
          "type": "text",
          "id": "h3_text",
          "label": "Heading Text",
          "default": "Lorem ipsum dolor sit"
        },
        {
          "type": "color",
          "id": "h3_text_color",
          "label": "Heading Text Color",
          "default": "#074542"
        },
        {
          "type": "text",
          "id": "p_text",
          "label": "Paragraph Text",
          "default": "Lorem ipsum dolor sit amet consectet"
        },
        {
          "type": "color",
          "id": "p_text_color",
          "label": "Paragraph Text Color",
          "default": "#000000"
        },
        {
          "type": "image_picker",
          "id": "img_upload",
          "label": "Upload Image for img-div"
        },
        {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      },
      {
        "type": "color_scheme",
        "id": "section_color_scheme",
        "label": "t:sections.all.colors.label",
        "default": "scheme-1"
      },
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "t:sections.multirow.settings.container_color_scheme.label",
        "default": "scheme-1"
      }
      ],
      "presets": [
        {
          "name": "Text and Image Block"
        }
      ]
    }
    {% endschema %}
    