                }
            ]
        },
        {
            "type": "small-div",
            "name": "Small Div",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "small_img",
                    "label": "Small Div Image"
                },
                {
                    "type": "text",
                    "id": "small_heading",
                    "label": "Small Div Heading",
                    "default": "EFA'S OIL"
                },
                {
                    "type": "text",
                    "id": "small_button_text",
                    "label": "Small Div Button Text",
                    "default": "Explore Now"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Explore Section",
            "category": "Sections"
        }
    ]
}
