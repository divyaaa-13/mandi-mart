{%- style -%}
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
  
    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }
  {%- endstyle -%}


<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.section_color_scheme }} custom-section">
<div class="explore-page color-{{ section.settings.color_scheme }}">
    <h3 style="color: {{ section.settings.h3_color }};">{{ section.settings.h3_text }}</h3>

    <div class="explore-container">
        {% for block in section.blocks %}
            {% if block.type == 'big-div' %}
                <div class="big-div">
                    <div class="big-div-img" style="width: {{ block.settings.big_img_width }}px;">
                        <img src="{{ block.settings.big_img | image_url }}" alt="Big Div Image" />
                    </div>
                    <div class="big-div-content">
                        <h4>{{ block.settings.big_heading }}</h4>
                        <button class="big-div-btn explore-btn">{{ block.settings.big_button_text }}</button>
                    </div>
                </div>
            {% elsif block.type == 'small-div' %}
                <div class="small-div">
                    <div class="small-div-content">
                        <h4>{{ block.settings.small_heading }}</h4>
                        <button class="big-div-btn explore-btn">{{ block.settings.small_button_text }}</button>
                    </div>
                    <div class="small-div-img" style="width: {{ block.settings.small_img_width }}px;">
                        <img src="{{ block.settings.small_img | image_url }}" alt="Small Div Image" />
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>

    <h5 style="color: {{ section.settings.h5_color }};">
        <a href="{{ section.settings.h5_link }}" style="color: inherit; text-decoration: none;">
            {{ section.settings.h5_text }}
        </a>
    </h5>
</div>
</div>

