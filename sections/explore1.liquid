<div class="explore-page">
    <h3>Explore Our Categories</h3>

    <div class="explore-container">
        {% for block in section.blocks %}
            {% if block.type == 'big-div' %}
                <div class="big-div">
                    <div class="big-div-img" style="width: {{ block.settings.big_img_width }}px;">
                        <img src="{{ block.settings.big_img | image_url }}" alt="Big Div Image" />
                    </div>
                    <div class="big-div-content">
                        <h4>{{ block.settings.big_heading }}</h4>
                        <button class="big-div-btn explore-btn">{{ block.settings.big_button_text }}</button>
                    </div>
                </div>
            {% elsif block.type == 'small-div' %}
                <div class="small-div">
                    <div class="small-div-content">
                        <h4>{{ block.settings.small_heading }}</h4>
                        <button class="big-div-btn explore-btn">{{ block.settings.small_button_text }}</button>
                    </div>
                    <div class="small-div-img" style="width: {{ block.settings.small_img_width }}px;">
                        <img src="{{ block.settings.small_img | image_url }}" alt="Small Div Image" />
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>

    <h5>Explore all categories</h5>
</div>

<style>
    .explore-page{
        width: 1203px;
        height: fit-content;
        margin: auto;
        padding: 0;
        display: flex;
        flex-direction: column;
        gap: 25px;
        background-color: grey;
    }
    
    .explore-container{
        margin: 0;
        padding: 0;
        width: 100%;
        height: fit-content;
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
    }

    .big-div{
        margin: 0;
        padding: 0;
        width: 758.27px;
        height: 349px;
        background-color: aqua;
        display: flex;
        justify-content: flex-end;
        border: none;
        border-radius: 20px;
        overflow: hidden;
        position: relative;
    }
    .big-div-img{
        margin: 0;
        padding: 0;
        width: 363px;
        height: 349px;
        overflow: hidden;
        object-fit: cover;
        z-index: 10;
        position: absolute;
        top: 0;
        left: 0;
    }
    .big-div-img img{
        margin: 0;
        padding: 0;
        width: 363px;
        height: 349px;
        background-position: center;
    }
    .big-div-content{
        margin: 0;
        padding: 0;
        height: 349px;
        width: 512px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 6px;
    }
    .big-div-content h4{
        margin: 0;
        padding: 0;
        font-size: 46px;
        font-weight: 700;
        line-height: 62.1px;
        color: #074542;
    }
    .big-div-content button{
        margin: 0;
        padding: 0;
        width: 327px;
        height: 63px;
        border: 1px solid #074542;
        border-radius: 82px;
        color: #074542;
        background-color: transparent;
        font-size: 24px;
        font-weight: 600;
        line-height: 37.32px;
    }

    .small-div{
        margin: 0;
        padding: 0;
        height: 349px;
        width: 434.73px;
        display: flex;
        flex-direction: column;
        align-items: center;
        background-color: aqua;
        position: relative;
        border: none;
        border-radius: 20px;
        overflow: hidden;
    }
    .small-div-content{
        margin: 0;
        padding: 0;
        width: 434.73px;
        height: 171px;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        align-items: center;
        gap: 6px;
    }
    .small-div-content h4{
        margin: 0;
        padding: 0;
        font-size: 46px;
        font-weight: 700;
        line-height: 62.1px;
        color: #074542;
    }
    .small-div-content button{
        margin: 0;
        padding: 0;
        width: 327px;
        height: 63px;
        border: 1px solid #074542;
        border-radius: 82px;
        color: #074542;
        background-color: transparent;
        font-size: 24px;
        font-weight: 600;
        line-height: 37.32px;
    }
    .small-div-img{
        margin: 0;
        padding: 0;
        height: 234px !important;
        min-height: 234px;
        width: 356.33px;
        position: absolute;
        bottom: 0;
        z-index: 10;
        object-fit: cover;
        overflow: hidden;
        background-color: transparent;
        display: block !important;
        z-index: 10;
    }
    .small-div-img img{
        margin: 0;
        padding: 0;
        height: 234px;
        width: 356.33px;
        background-position: center;
    }

    .explore-page h5{
        margin: 0;
        padding: 0;
        font-size: 24px;
        font-weight: 600;
        text-align: center;
        line-height: 37.32px;
        color: #074542;
    }
</style>

