<div class="explore-now-div">
    {% for block in section.blocks %}
    <div class="explore-box">
        <div class="explore-text-content">
            <h4 style="color: {{ block.settings.h4_text_color }};">{{ block.settings.h4_text }}</h4>
            <button class="explore-now-btn" style="color: {{ block.settings.button_text_color }};">{{ block.settings.button_text }}</button>
        </div>
        <div class="explore-now-img">
            <div class="explore-now-img" style="width: {{ block.settings.explore_img_width }}px;">
                <img src="{{ block.settings.explore_img | image_url }}" alt="explore Image" />
            </div>
        </div>
    </div>
    {% endfor %}
</div>


<style>
    .explore-now-div{
        margin: auto;
        padding: 0;
        width: 1160px;
        height: fit-content;
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        background-color: gray;
    }

    .explore-box{
        margin: 0;
        padding: 0;
        width: 380px;
        height: 330px;
        background-color: aqua;
        display: flex;
        flex-direction: column;
        align-items: center;
        position: relative;
        border: none;
        border-radius: 20px;
    }

    .explore-text-content{
        margin: 0;
        padding: 0;        
        height: 131px;
        width: fit-content;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 6px;
    }
    .explore-text-content h4{
        margin: 0;
        padding: 0;
        font-size: 46px;
        font-weight: 700;
        line-height: 62.1px;
    }

    .explore-text-content button{
        margin: 0;
        padding: 0;
        width: 327px;
        height: 37px;
        border: 3px solid #074542;
        background-color: #ffffff;
        border-radius: 82px;
        font-size: 24px;
        font-weight: 600;
        line-height: 37.32px;
    }

    .explore-now-img{
        margin: 0;
        padding: 0;
        height: 200px;
        width: 373px;
        background-color: transparent;
        object-fit: cover;
        position: absolute;
        bottom: 0;
    }
    .explore-now-img img{
        margin: 0;
        padding: 0;
        height: 200px;
        width: 373px;
    }


</style>


{% schema %}
    {
      "name": "Explore Section",
      "settings": [],
      "blocks": [
        {
          "type": "explore_box",
          "name": "Explore Box",
          "settings": [
            {
              "type": "text",
              "id": "h4_text",
              "label": "Heading Text",
              "default": "BEST SELLERS"
            },
            {
              "type": "color",
              "id": "h4_text_color",
              "label": "Heading Text Color",
              "default": "#000000"
            },
            {
              "type": "text",
              "id": "button_text",
              "label": "Button Text",
              "default": "Explore Now"
            },
            {
              "type": "color",
              "id": "button_text_color",
              "label": "Button Text Color",
              "default": "#000000"
            },
            {
                    "type": "image_picker",
                    "id": "explore_img",
                    "label": "explore box Image"
                },
                {
                    "type": "range",
                    "id": "explore_img_width",
                    "label": "Small Div Image Width (px)",
                    "default": 350,
                    "min": 100,
                    "max": 1000,
                    "step": 10
                }
          ]
        }
      ],
      "presets": [
        {
          "name": "Explore Section",
          "category": "Custom"
        }
      ]
    }
    {% endschema %}
    