<div class="explore-now-div">
    <div class="explore-box">
        <div class="explore-text-content">
            <h4>BEST SELLERS</h4>
            <button class="explore-now-btn">Explore Now</button>
        </div>
        <div class="explore-now-img">
            <img />
        </div>
    </div>
</div>

<style>
    .explore-now-div{
        margin: auto;
        padding: 0;
        width: 1320px;
        height: fit-content;
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        background-color: gray;
    }

    .explore-box{
        margin: 0;
        padding: 0;
        width: 434.73px;
        height: 349px;
        background-color: aqua;
        display: flex;
        flex-direction: column;
        align-items: center;
        position: relative;
    }

    .explore-text-content{
        margin: 0;
        padding: 0;        
        height: 131px;
        width: fit-content;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 6px;
    }
    .explore-text-content h4{
        margin: 0;
        padding: 0;
        font-size: 46px;
        font-weight: 700;
        line-height: 62.1px;
    }

    .explore-text-content button{
        margin: 0;
        padding: 0;
        width: 327px;
        height: 37px;
        border: 3px solid #074542;
        background-color: #ffffff;
        border-radius: 82px;
        font-size: 24px;
        font-weight: 600;
        line-height: 37.32px;
    }

    .explore-now-img{
        margin: 0;
        padding: 0;
        height: 200px;
        width: 373px;
        background-color: transparent;
        object-fit: cover;
        position: absolute;
        bottom: 0;
    }
    .explore-now-img img{
        margin: 0;
        padding: 0;
        height: 200px;
        width: 373px;
    }


</style>


