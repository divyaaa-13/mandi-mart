      {
        "type": "hero_para",
        "name": "Hero Paragraph",
        "settings": [
          {
            "type": "textarea",
            "id": "hero_para_text",
            "label": "Paragraph Text",
            "default": "Lorem ipsum dolor sit amet consectetur adipisicing elit. Tempore ad perspiciatis voluptatem temporibu."
          }
        ]
      },
      {
        "type": "hero_button",
        "name": "Hero Button",
        "settings": [
          {
            "type": "text",
            "id": "hero_button_text",
            "label": "Button Text",
            "default": "Click Here"
          },
          {
            "type": "url",
            "id": "button_link",
            "label": "Button Link"
          }
        ]
      },
      {
        "type": "hero_point",
        "name": "Hero Point",
        "settings": [
          {
            "type": "text",
            "id": "hero_point_text",
            "label": "Point Text",
            "default": "Lorem ipsum dolor sit amet consectetur."
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Hero Section",
        "category": "Custom"
      }
    ]
  }
  {% endschema %}
  
