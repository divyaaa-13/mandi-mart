<div class="hero-div">
    <img class="hero-bg" src="{{ section.settings.hero_background_image | image_url }}" alt="Hero Background" />
    
    <div class="hero-content">
        <div class="hero-ratings">
            <img src="{{ 'hero-ratings.png' | asset_url }}" alt="ratings" />
        </div>

        <div class="hero-title">
            <h3 class="hero-title-text">{{ block.settings.hero_title }}</h3>
        </div>
        
        

        <p class="hero-para">{{ block.settings.hero_paragraph }}</p>

        <div class="hero-points">
            {% for point in block.blocks %}
            <div class="hero-point">
                <div class="hero-point-svg">
                    {% render 'hero-tick' %}
                </div>
                <p class="hero-point-text">{{ point.settings.hero_point_text }}</p>
            </div>
            {% endfor %}
        </div>

        <button class="hero-button">{{ block.settings.hero_button_text }}</button>
    </div>
</div>

<style>
    .hero-div {
        height: 610px;
        width: 100%;

        position: relative;
    }

    .hero-bg {
        height: 610px;
        width: 100%;
        object-fit: cover;
        position: absolute;
        z-index: -3;
    }

    .hero-content {
        margin-left: 120px;
        padding-top: 50px;
        width: 594px;
        height: fit-content;
        background-color: blueviolet;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: 15px;
        justify-content: center;
    }

    .hero-ratings {
        margin: 0;
        padding: 0;
        height: 32px;
        width: fit-content;
    }
    .hero-ratings img {
        margin: 0;
        padding: 0;
        height: 32px;
    }

    .hero-title {
        margin: 0;
        padding: 0;
        font-family: "Poppins", sans-serif;
        font-size: 40px;
        font-weight: 600;
        line-height: 54px;
        color: #074542;
    }

    .hero-para {
        margin: 0;
        padding: 0;
        font-family: "Poppins", sans-serif;
        font-size: 20px;
        font-weight: 400;
        line-height: 31.1px;
    }

    .hero-points {
        margin: 0;
        padding: 0;
        display: flex;
        gap: 12px;
    }

    .hero-point {
        margin: 0;
        padding: 0 15.5px;
        height: 33px;
        display: flex;
        align-items: center;
        gap: 10px;
        background-color: rgba(255, 255, 255, 0.4);
        border-radius: 50px;
    }

    .hero-point-svg {
        margin: 0;
        padding: 0;
        width: 20px;
        height: 20px;
        background-color: #074542;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .hero-point-text {
        margin: 0;
        padding: 0;
        font-family: "Poppins", sans-serif;
        font-size: 18px;
        font-weight: 400;
        line-height: 27px;
    }

    .hero-button {
        margin: 0;
        padding: 0;
        height: 77px;
        width: 419px;
        border: none;
        border-radius: 82px;
        background: linear-gradient(180deg, #3AAFA9 0%, #228B85 100%);
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 24px;
        font-weight: 600;
        line-height: 37.32px;
        color: #ffffff;
        font-family: "Poppins", sans-serif;
    }
</style>

{% schema %}
{
    "name": "Hero Section",
    "settings": [
        {
            "type": "image_picker",
            "id": "hero_background_image",
            "label": "Background Image"
        }
    ],
    "blocks": [
        {
            "type": "hero_content",
            "name": "Hero Content",
            "settings": [
                {
                    "type": "text",
                    "id": "hero_title",
                    "label": "Hero Title",
                    "default": "Lorem ipsum dolor sit amet consectetur adipisicing elit."
                },
                {
                    "type": "text",
                    "id": "hero_paragraph",
                    "label": "Hero Paragraph",
                    "default": "Lorem ipsum dolor sit amet consectetur adipisicing elit. Tempore ad perspiciatis voluptatem temporibu."
                },
                {
                    "type": "text",
                    "id": "hero_button_text",
                    "label": "Button Text",
                    "default": "CTA TEXT"
                }
            ]
        },
        {
            "type": "hero_point",
            "name": "Hero Point",
            "settings": [
                {
                    "type": "text",
                    "id": "hero_point_text",
                    "label": "Hero Point Text",
                    "default": "Lorem ipsum dolor sit amet consectetur"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Hero Section",
            "category": "Custom"
        }
    ]
}
{% endschema %}
